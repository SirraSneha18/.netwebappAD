@page
@model Hryhoriichuk.University.Instagram.Web.Models.UserProfile
@using Hryhoriichuk.University.Instagram.Web.Models

@{
    Layout = "_Layout";
}

<div>
    <p>Full Name: @Model.FullName</p>
    <p><strong>User Name:</strong> @Model.UserName</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Locked Out:</strong> @(Model.IsLockedOut ? "Yes" : "No")</p>
</div>

@if (Model.Posts != null && Model.Posts.Count > 0)
{
    <h2>My Posts</h2>
    <div class="row">
        @foreach (var post in Model.Posts)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top" src="@post.ImagePath" alt="Post Image">
                    <div class="card-body">
                        <p class="card-text">@post.Caption</p>
                        <!-- Add other post details here -->
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No posts available.</p>
}
